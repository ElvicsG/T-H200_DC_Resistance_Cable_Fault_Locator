<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_round_border_99_corner_2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/progress_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_25"
            android:textColor="@color/gray4"
            android:textSize="@dimen/size_15" />

        <!--进度-->
        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_10"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginRight="@dimen/size_20"
            android:layout_marginTop="@dimen/size_25"
            android:progressDrawable="@drawable/horizontal_progress" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/size_20">
            <!--左边的-->
            <TextView
                android:id="@+id/progress_percent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/gray4"
                android:textSize="@dimen/size_15" />
            <!--右边的-->
            <TextView
                android:id="@+id/progress_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_30"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/gray4"
                android:textSize="@dimen/size_13" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/size_8"
            android:layout_marginTop="@dimen/size_15"
            android:background="@drawable/shape_main_color"
            android:paddingBottom="@dimen/size_10"
            android:paddingLeft="@dimen/size_25"
            android:paddingRight="@dimen/size_25"
            android:paddingTop="@dimen/size_10"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/size_15"
            android:visibility="gone"/>

    </LinearLayout>
</FrameLayout>